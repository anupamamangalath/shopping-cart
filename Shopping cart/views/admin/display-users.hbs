<section style="margin-top: 4rem;margin-bottom:5rem;">
    <div class="container">
        <div class="row mt-4">

        </div>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col"></th> 
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <td scope="row">{{inc @index}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.email}}</td>
                    <td><a type="button" href="view-user-order/{{this._id}}" class="btn btn-info">View Order</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
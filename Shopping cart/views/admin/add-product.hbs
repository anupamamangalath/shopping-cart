<div class="container" style="margin-top: 4rem;margin-bottom:5rem;">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-center">Add Product</h2>
            <form action="/admin/add-product" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="">Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter name">
                </div>
                <div class="form-group">
                    <label for="">Category</label>
                    <input type="text" class="form-control" id="category" name="category" placeholder="Category">
                </div>
                <div class="form-group">
                    <label for="">Description</label>
                    <input type="text" class="form-control" id="description" name="description"
                        placeholder="Description">
                </div>
                <div class="form-group">
                    <label for="">Price</label>
                    <input type="number" class="form-control" id="price" name="price" placeholder="Price">
                </div>
                <div class="form-group">
                    <label for="">Section</label><br>
                    <input type="radio" id="must-have" name="section" value="must-have">
                    <label for="must-have">Must-have</label><br>
                    <input type="radio" id="normal" name="section" value="normal">
                    <label for="normal">Normal</label><br>

                </div>

                <div class="form-group">
                    <label for="">Image</label><br>
                    <img src="" alt="  add image" style="width:100px; height:auto;" id="imageview" class="p-3">
                    <input type="file" class="form-control" id="image" name="imagename" placeholder="image"
                        onchange="viewImage(event)">
                </div>

                <button type="submit" class="btn btn-success" onclick="return (" added successfully")">Submit</button>
            </form>
        </div>
    </div>
</div>
<script>
    function viewImage(event) {
        document.getElementById('imageview').src = URL.createObjectURL(event.target.files[0])
    }
</script>